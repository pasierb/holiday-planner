<!DOCTYPE html>
<html>
<head>
  <title>
    <%= content_for?( :title ) ? yield( :title ) : "HolidayPlannerApp.com" %>
  </title>
  <%= stylesheet_link_tag 'reset', 'application', 'jquery.bubblepopup.v2.3.1' %>
  <%= formtastic_stylesheet_link_tag %>
  <%= javascript_include_tag 'jquery', 'jquery-ui', 'jquery.bubblepopup.v2.3.1.min.js', 'application' %>  
  <%= csrf_meta_tag %>
</head>
<body>

  <div id="fb-root"></div>
  <script src="http://connect.facebook.net/en_US/all.js"></script>
  <script>
    FB.init({
      appId  : 168151449883251,
      status : true, // check login status
      cookie : true, // enable cookies to allow the server to access the session
      xfbml  : true  // parse XFBML
    });
  </script>
  <div id="wysuwany_div">
    <div id="ramka_facebooka">
      <fb:fan profile_id="168151449883251" stream="0" connections="9" logobar="0" width="190" height="380"></fb:fan>
    </div>
  </div>


<div class="wrp">
  
  <section class="top-wrapper">
    <header id="top">
      <hgruop>
        <h1><%= link_to 'HolidayPlanner', planner_path %></h1>
        <h2 id="year-holder"><%= yield :year_holder %></h2>
      </hgroup>
      
      <section class="top-menu">
        <%= render :partial => "shared/top_menu" %>
      </section>
      
      <%= render :partial => "shared/user_bar" %>
    
    </header>
  </section>

  <%= flash_notice %> 
  <%=raw flash_error %> 
    
  <div class="tp_adsense">
    <script type="text/javascript"><!--
      google_ad_client = "ca-pub-8246502758908109";
      /* HP - top links */
      google_ad_slot = "5599868826";
      google_ad_width = 728;
      google_ad_height = 15;
      //-->
    </script>
    <script type="text/javascript" src="http://pagead2.googlesyndication.com/pagead/show_ads.js"></script>
  </div>

  <section class="content">
    <%= yield %>
  </section>
    
  <footer>
    &copy; Copyright 2010 - 2011 HolidayPlannerApp.com. All rights reserved.
  </footer>

</div>
</body>
</html>
