<% content_for :title do %>
  HolidayPlanner - <%= @page.title %>
<% end %>

<article class="page">

  <% cache "#{I18n.locale}/custom_pages/#{@page.id}", :expires_in => 6.hours do %>
    <header class="page-title">
      <hgroup>
        <h1><%=h @page.title %></h1>
      </hgroup>
    </header>

    <section class="page-content">
      <%=raw @page.content %>
    </section>
  <% end %>

</article>
