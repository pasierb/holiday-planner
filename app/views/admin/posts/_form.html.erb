<%- semantic_form_for [:admin,@post]  do |f| %>
  
  <% f.inputs do %>
    <%= f.input :title %>
    <%= f.input :permalink %>
    <%= f.input :locale %>
    <%= f.input :published %>
    <%= f.input :created_at %>
  <% end %>

  <%= f.input :content, :input_html => { :class => "ckeditor" } %>
  
  <% f.buttons do %>
    <%= f.submit %>
  <% end %>

<% end %>
